<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet"
              href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
              integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
              crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        <header>
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('home') }}">{% trans %}Home{% endtrans %}</a>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('expense_index') }}">{% trans %}Expenses{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('category_index') }}">{% trans %}Categories{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('expense_group_index') }}">{% trans %}Types{% endtrans %}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
